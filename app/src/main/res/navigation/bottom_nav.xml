        android:id="@+id/booksActivity"
        android:name="com.example.rokomaribookapp.ui.books.BooksActivity"
        android:label="activity_books"
        tools:layout="@layout/activity_books" />
    <activity
        android:id="@+id/productsActivity"
        android:name="com.example.rokomaribookapp.ui.products.ProductsActivity"
        android:label="activity_products"
        tools:layout="@layout/activity_products" />
    <fragment
        android:id="@+id/signInFragment"
