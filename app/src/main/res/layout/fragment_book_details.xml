<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.books.details.BookDetailsFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/cart_menu"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="Book Name"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Medium" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toTopOf="@id/price_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/book_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginHorizontal="64dp"
                android:src="@drawable/comics_1"
                android:scaleType="centerInside"
                android:layout_marginTop="16dp"/>
            <TextView
                android:id="@+id/book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/book_img"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp"
                android:text="Climate And Rice Cropping Systems In the Brahmaputra Basin: An Approach To Area Studies On Bangladesh And Assam"
                android:textSize="18sp"
                android:paddingHorizontal="24dp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"/>
            <TextView
                android:id="@+id/author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/book_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="by Haruhis Asad"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/app_color"
                android:layout_marginTop="4dp"/>
            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/author_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_medium"
                android:text="Tk. 302"
                android:textSize="18sp"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/textview_upper_border"
                android:layout_marginTop="8dp"/>
            <LinearLayout
                android:id="@+id/border1"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                app:layout_constraintTop_toBottomOf="@id/price"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="#F4F4F4"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/stock_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/border1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/accept_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:shapeAppearanceOverlay="@style/CircleShape"
                    android:src="@drawable/accept"
                    app:contentPadding="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_margin="16dp"/>
                <TextView
                    android:id="@+id/stock_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In Stock"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="@id/accept_img"
                    app:layout_constraintStart_toEndOf="@id/accept_img"
                    android:layout_marginStart="16dp"/>
                <TextView
                    android:id="@+id/no_of_books"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(only 5 copy left)"
                    android:fontFamily="@font/roboto"
                    android:textColor="#F44336"
                    app:layout_constraintTop_toTopOf="@id/stock_status"
                    app:layout_constraintStart_toEndOf="@id/stock_status"
                    android:layout_marginStart="4dp"
                    />
                <TextView
                    android:id="@+id/note_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* Order Before Stock Out"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/stock_status"
                    app:layout_constraintStart_toEndOf="@id/accept_img"
                    android:layout_marginStart="16dp"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:id="@+id/border2"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                app:layout_constraintTop_toBottomOf="@id/stock_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="#F4F4F4"
                android:orientation="horizontal"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/genre_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/border2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <LinearLayout
                    android:id="@+id/first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_margin="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GENRE"
                        android:textColor="@color/black"
                        android:layout_gravity="center"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/category"
                        android:layout_gravity="center"
                        android:layout_marginVertical="4dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="AGRICULTURE"
                        android:maxLines="1"
                        android:ellipsize="end"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@color/black"
                    app:layout_constraintStart_toEndOf="@id/first"
                    app:layout_constraintEnd_toStartOf="@id/second"
                    android:layout_marginVertical="16dp"/>
                <LinearLayout
                    android:id="@+id/third"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="@id/first"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintVertical_bias="0"
                    android:layout_marginEnd="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RELEASE DATE"
                        android:textColor="@color/black"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/release_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="2012"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_gravity="center"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginVertical="4dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@color/black"
                    app:layout_constraintStart_toEndOf="@id/second"
                    app:layout_constraintEnd_toStartOf="@id/third"
                    android:layout_marginVertical="16dp"/>
                <LinearLayout
                    android:id="@+id/second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="@id/first"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/third"
                    app:layout_constraintStart_toEndOf="@id/first"
                    app:layout_constraintVertical_bias="0"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LENGTH"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="16dp"/>
                    <TextView
                        android:id="@+id/no_of_pages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="115"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_gravity="center"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginVertical="4dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PAGES"
                        android:layout_gravity="center"
                        android:textColor="@color/black"/>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/price_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_bar"
        app:layout_constraintVertical_bias="1">

        <TextView
            android:id="@+id/price_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="Price:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/roboto"
            android:maxLines="1"
            android:text="302"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/price_title"
            app:layout_constraintTop_toBottomOf="@id/price_title" />

        <Button
            android:id="@+id/add_to_cart_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#046DFD"
            android:paddingHorizontal="32dp"
            android:text="Add to Cart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toEndOf="@+id/price_title"
            app:layout_constraintTop_toTopOf="@id/price_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>