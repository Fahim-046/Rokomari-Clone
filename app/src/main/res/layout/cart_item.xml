<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:elevation="8dp"
    android:layout_marginTop="8dp"
    android:background="#F3F3F3"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">
        <CheckBox
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
            android:id="@+id/product_img"
            android:layout_width="80dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/check"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintDimensionRatio="1:1"
            android:src="@drawable/default_placeholder"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"/>
        <TextView
            android:id="@+id/product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@+id/product_img"
            app:layout_constraintTop_toTopOf="@id/product_img"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            android:text="Comics Book "
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/black"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/product_name"
            app:layout_constraintStart_toStartOf="@id/product_name"
            android:text="Tk. 220"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/product_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="1"
            android:fontFamily="@font/roboto_medium"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@id/increment_btn"
            app:layout_constraintTop_toTopOf="@id/product_price"
            android:layout_marginEnd="4dp"
            app:layout_constraintStart_toEndOf="@id/product_price"
            app:layout_constraintHorizontal_bias="1"
            android:gravity="top"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/increment_btn"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_add"
            app:shapeAppearanceOverlay="@style/CircleShape"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="@id/product_price"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:contentPadding="1dp"
            android:background="#ECEAEA"
            android:layout_marginStart="2dp"
            app:layout_constraintBottom_toBottomOf="@id/product_amount"
            />
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/decrement_btn"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_remove"
            app:shapeAppearanceOverlay="@style/CircleShape"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="@id/product_price"
            app:layout_constraintEnd_toStartOf="@id/product_amount"
            android:background="#ECEAEA"
            app:layout_constraintStart_toEndOf="@id/product_price"
            app:layout_constraintHorizontal_bias="1"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="@id/product_amount"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>